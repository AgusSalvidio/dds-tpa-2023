<!DOCTYPE html>
<html lang="en">
<head>
    {{{headMeta}}}
</head>
<body>
<header>
    {{{customAdministrationNavbar}}}
</header>
<main>
    <div class="d-flex justify-content-end p-2">
        <legend class="">{{title}}</legend>
        <a class="btn btn-success" href="incidents/register"><i class="fa-regular fa-file"></i>Agregar</a>
    </div>
    <section>
        <div class="px-1">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Entidad</th>
                            <th>Reportado por</th>
                            <th>Servicio</th>
                            <th>Observaciones</th>
                            <th>Estado</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each object-list}}
                            <tr>
                                <td>{{this.entity.name.name}}</td>
                                <td>{{this.user.username}}</td>
                                <td>{{this.service.name}}</td>
                                <td>{{this.observations}}</td>
                                <td>{{this.state.name}}</td>
                                <td>{{this.reportDateTime}}</td>
                                <td class="px-4">
                                    {{#if (isOpen this.state.name)}}
                                        <a href="/incidents/{{this.id}}/review" class="btn-sm "><i
                                                class="fa-solid fa-magnifying-glass-location"></i></a>
                                        <a href="/incidents/{{this.id}}/close" class="btn-sm "><i class="fa-solid fa-lock"
                                                                                                  style="color:red"></i></a>
                                    {{/if}}
                                </td>
                            </tr>
                        {{else}}
                            <tr>
                                <td colspan="6">No hay Registros en el Sistema</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</main>
<footer>
</footer>
{{{scripts}}}
</body>
</html>
