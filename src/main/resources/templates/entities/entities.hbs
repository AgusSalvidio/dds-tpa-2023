<!DOCTYPE html>
<html lang="en">
<head>
    {{{headMeta}}}
</head>

<body>
<header>
    {{{customAdministrationNavbar}}}
</header>

<main>
    <div class="d-flex justify-content-end p-2">
        <legend class="">Administrar Entidades</legend>
        <a class="btn btn-success" href="/entities/register">
            <i class="fa-regular fa-file"></i>Agregar
        </a>
    </div>
    <section>
        <div class="px-1">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    <table class=" table table-striped" >
                        <thead>
                            <tr>
                                <th class="col-3">Nombre</th>
                                <th class="col-8">Descripcion</th>
                                <th class="col-1">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each entities}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.name}}</td>
                                    <td class="px-4">
                                        <a href="" class="btn-sm "><i class="fa-regular fa-pen-to-square"></i></a>
                                        <a href="" class="btn-sm "><i class="fa-solid fa-xmark"></i></a>
                                    </td>
                                </tr>
                        {{else}}
                            <tr>
                                <td colspan="6">No hay entidades</td>
                            </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </section>
</main>

<footer>
</footer>
{{{scripts}}}
</body>
</html>